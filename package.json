{
  "name": "elm-action",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm --prefix sample install",
    "compile": "ELM_HOME=$(pwd)/node_modules/elmer-test/home elm make",
    "compile:docs": "ELM_HOME=$(pwd)/node_modules/elmer-test/home elm make --docs=docs.json",
    "preview:docs": "elm-doc-preview",
    "test": "npm-run-all -s test:elm test:integration",
    "test:elm": "elm-spec",
    "test:playwright": "playwright test",
    "test:playwright:watch": "playwright test --headed",
    "start:integration": "npm --prefix sample run start:test",
    "test:integration:watch": "npm-run-all -p start:integration test:playwright:watch",
    "test:integration": "start-server-and-test start:integration :9732 test:playwright"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "elm": "^0.19.1-5"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.3",
    "elm-doc-preview": "^5.0.5",
    "elm-spec-runner": "^2.5.1",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^2.0.0"
  }
}
